<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#c4c4c4"
    tools:context="com.example.l400.layouts_for_sir.Main2Activity">

    <ImageView
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:src="@drawable/pictures"
        android:id="@+id/button3"
        android:background="@drawable/main2_button"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="picture"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_alignEnd="@+id/button3"
        android:layout_below="@+id/button3"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:id="@+id/textView" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:text="Messages"
        android:onClick="first"
        android:src="@drawable/videos"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/button4"
        android:layout_marginTop="5dp"
        android:background="@drawable/main2_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Vedios"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:id="@+id/textView6"
        android:layout_above="@+id/button5"
        android:layout_alignParentEnd="true" />


    <ImageView
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:src="@drawable/audio"
        android:background="@drawable/main2_button"
       android:layout_marginTop="30dp"
        android:id="@+id/button5"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Audio's"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_alignEnd="@+id/button3"
        android:layout_below="@+id/button5"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:id="@+id/textView1" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:text="Audio's"
        android:id="@+id/button6"
        android:background="@drawable/main2_button"
        android:textStyle="bold"
        android:textSize="20dp"
        android:src="@drawable/contacts"

        android:layout_alignTop="@+id/button5"
        android:layout_alignParentEnd="true" />
    <ImageView
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:text="Videos"
        android:id="@+id/button7"
        android:src="@drawable/call"
        android:background="@drawable/main2_button"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignTop="@+id/button8"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Call Log"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_alignEnd="@+id/button3"
        android:layout_below="@+id/button7"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:text="Call Log"
        android:id="@+id/button8"

        android:background="@drawable/main2_button"
        android:textSize="20dp"
        android:src="@drawable/messag"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView1"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:id="@+id/textView4"
        android:layout_above="@+id/button8"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Messages"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:id="@+id/textView3"
        android:layout_below="@+id/button8"
        android:layout_alignStart="@+id/button8" />
</RelativeLayout>

